<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.neotran.idictionary.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include layout="@layout/tool_bar"/>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_layout_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_layout_left"
        android:paddingRight="@dimen/padding_layout_right"
        android:paddingTop="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:context="com.neotran.idictionary.fragment.SearchFragment">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/search_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@+id/search_button"
                    android:hint="Please enter a word..."
                    android:inputType="textNoSuggestions"
                    android:paddingBottom="@dimen/padding_edittext_bottom"
                    android:singleLine="true"
                    android:textSize="@dimen/text_size_large"/>

                <ImageButton
                    android:id="@+id/clear_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/icon_clear"
                    android:visibility="gone"/>
            </FrameLayout>

            <Button
                android:id="@+id/search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/margin_element"
                android:background="@color/gray"
                android:text="Search"
                android:visibility="gone"/>
        </RelativeLayout>

        <com.neotran.idictionary.widget.WordView
            android:id="@+id/word_view"
            android:layout_marginTop="@dimen/margin_element"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

        </com.neotran.idictionary.widget.WordView>

        <ListView
            android:id="@+id/suggested_words_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_element"
            android:visibility="gone">
        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_layout_vertical"
            android:orientation="vertical">

            <TextView
                style="@style/AppTheme.HeaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recent Search:"/>

            <LinearLayout
                android:id="@+id/recent_search_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>

